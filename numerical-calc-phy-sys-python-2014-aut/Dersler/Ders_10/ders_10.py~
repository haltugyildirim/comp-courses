class Person2:
    #attributes
    name = "No name yet"
    age = 0

    #methods
    def __init__(self,x,y):
        self.name = x
        self.age = y
        print "You have just created a Person Object."

def talk(self):
    print "Hi! My name is", self.name, "and I am", self.age, "years old."
